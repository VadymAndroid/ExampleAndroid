<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="ua.mycredit.mycredit.ui.authentication.registration.ocupation.StudentViewModel" />

        <variable
            name="viewModel"
            type="StudentViewModel" />

    </data>

    <LinearLayout
        style="@style/Wide"
        android:orientation="vertical">

        <include
            layout="@layout/income_fields"
            app:viewModel="@{viewModel}" />

        <android.support.v7.widget.CardView
            style="@style/Wide"
            android:layout_marginBottom="@dimen/margin_short"
            android:layout_marginTop="@dimen/margin_short"
            app:cardElevation="@dimen/shadow_small">

            <LinearLayout
                style="@style/Wide"
                android:orientation="vertical"
                android:visibility="visible">

                <include
                    layout="@layout/input_text_picker"
                    app:viewModel="@{viewModel.schoolName}" />

                <include
                    layout="@layout/input_variant_picker"
                    app:viewModel="@{viewModel.facultySpec}" />

                <include
                    layout="@layout/input_variant_picker"
                    app:viewModel="@{viewModel.educationDegree}" />

                <include
                    layout="@layout/input_text_picker"
                    app:viewModel="@{viewModel.studentId}" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</layout>
