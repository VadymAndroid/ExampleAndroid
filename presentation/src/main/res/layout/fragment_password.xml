<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="ua.mycredit.mycredit.ui.authentication.registration.signup.PasswordViewModel" />

        <import type="ua.mycredit.mycredit.ui.bases.input.PasswordRequirementsViewModel.PasswordRequirement" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="PasswordViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin">

        <TextView
            style="@style/SignUpText.Header"
            android:paddingBottom="@dimen/margin_half"
            android:paddingTop="@dimen/margin_half"
            android:text="@string/enter_your_data" />

        <FrameLayout
            style="@style/Wide"
            android:background="@drawable/bg_your_phone_number"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phone"
                style="@style/Wide.Indented"
                android:layout_gravity="center_vertical"
                android:text="@{viewModel.phone, default = 380974245341}" />

            <ImageView
                android:id="@+id/editPhone"
                style="@style/Ripple.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/screen_horizontal_margin"
                android:layout_marginRight="@dimen/margin_half"
                android:onClick="@{() -> viewModel.backToPhoneSignUp()}"
                android:padding="@dimen/margin_half"
                android:src="@drawable/ic_edit"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <RelativeLayout style="@style/Wide">

            <include
                android:id="@+id/fb_email"
                layout="@layout/fb_email"
                app:viewModel="@{viewModel}" />

            <include
                style="@style/Wide.Indented"
                layout="@layout/password_requirements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/password"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/margin"
                android:visibility="@{viewModel.password.hasFocus ? View.VISIBLE : View.GONE}"
                app:viewModel="@{viewModel.passwordRequirements}" />

            <include
                android:id="@+id/password"
                layout="@layout/input_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fb_email"
                android:layout_marginLeft="@dimen/screen_horizontal_margin"
                android:layout_marginRight="@dimen/screen_horizontal_margin"
                app:afterTextChanged="@{viewModel.passwordRequirements::onPasswordChanged}"
                app:viewModel="@{viewModel.password}" />

            <include
                layout="@layout/input_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:layout_marginLeft="@dimen/screen_horizontal_margin"
                android:layout_marginRight="@dimen/screen_horizontal_margin"
                app:viewModel="@{viewModel.confirm}" />

        </RelativeLayout>

    </LinearLayout>

</layout>
