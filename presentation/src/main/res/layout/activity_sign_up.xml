<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="ua.mycredit.mycredit.ui.authentication.registration.SignUpActivity" />

        <import type="android.text.method.LinkMovementMethod" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="SignUpActivity" />

    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/signUpCoordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_background">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/appBar_height">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gradient_primary_270"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_collapseMode="pin">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:theme="@style/AppTheme.PopupOverlay"
                        app:navigationIcon="?attr/homeAsUpIndicator"
                        app:navigationOnClickListener="@{() -> viewModel.onNavigationClick()}"
                        app:title="@string/sign_up" />

                    <ua.mycredit.mycredit.ui.custom.progress.PercentageProgress
                        android:id="@+id/percentageProgress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:max="5"
                        app:progress="@{viewModel.percentageProgress}"
                        app:progress_values="@array/sing_up_progress" />

                    <TextView
                        android:id="@+id/signUpMinutesLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:textColor="@color/white_50"
                        android:textSize="12sp"
                        tools:text="@string/minutes_left" />

                </LinearLayout>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll_view"
            style="@style/Fill"
            android:layout_marginBottom="@dimen/button_height"
            app:behavior_overlapTop="@dimen/appBar_overlay"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                style="@style/Fill"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fragment_container"
                    style="@style/Fill" />

                <LinearLayout
                    style="@style/Wide"
                    android:layout_marginTop="@dimen/margin_big"
                    android:background="@color/gray_E8E9EB"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin"
                    android:visibility="@{viewModel.securityGuarantee}">

                    <TextView
                        style="@style/Wrapped"
                        android:text="@string/security_guarantee" />

                    <Space style="@style/WeightedHorizontallyWrapped" />

                    <ImageView
                        style="@style/Wrapped"
                        android:src="@drawable/ic_3d_secure"
                        tools:ignore="ContentDescription" />

                    <View
                        style="@style/Divider.Vertical"
                        android:layout_marginEnd="@dimen/margin"
                        android:layout_marginStart="@dimen/margin" />

                    <ImageView
                        style="@style/Wrapped"
                        android:src="@drawable/ic_ssl"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/nextButtonLinearLayout"
            style="@style/Wide"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/calculatorFAB"
                style="@style/Ripple"
                android:layout_width="@dimen/button_big"
                android:layout_height="@dimen/button_big"
                android:layout_gravity="end"
                android:layout_margin="@dimen/margin"
                android:onClick="@{() -> viewModel.onFAB()}"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="28dp"
                app:cardElevation="6dp">

                <TextView
                    style="@style/Wrapped"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/my_credit"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/nextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gradient_accent"
                android:onClick="@{() -> viewModel.onNextButton()}"
                android:text="@string/next"
                android:textColor="@color/white" />
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>
