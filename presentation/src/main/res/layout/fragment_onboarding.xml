<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/bg_launch">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/onboardingImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:srcCompat="@drawable/ic_onboarding_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="35dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/onboardingHeader"
            style="@style/OnboardingText"
            android:textSize="42sp"
            tools:text="20 МИН" />

        <TextView
            android:id="@+id/onboardingText"
            style="@style/OnboardingText"
            android:textSize="16sp"
            tools:text="БЫСТРОЕ РЕШЕНИЕ\nДЛЯ ВАС!" />

    </LinearLayout>

</FrameLayout>
