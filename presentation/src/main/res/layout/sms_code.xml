<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <import type="ua.mycredit.mycredit.ui.bases.input.BaseSmsCodeViewModel" />

        <variable
            name="viewModel"
            type="BaseSmsCodeViewModel" />

    </data>

    <android.support.v7.widget.CardView
        style="@style/Wide.Indented.VerticalMargin"
        android:visibility="visible"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/margin_big">

        <include
            layout="@layout/input_field"
            app:viewModel="@{viewModel.code}" />

    </android.support.v7.widget.CardView>

</layout>
