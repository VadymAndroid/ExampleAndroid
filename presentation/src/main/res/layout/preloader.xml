<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="ua.mycredit.mycredit.ui.bases.BaseViewModel" />

        <variable
            name="viewModel"
            type="BaseViewModel" />
    </data>

    <ViewSwitcher
        style="@style/Fill"
        app:displayedChild="@{viewModel.loadings > 0 ? 0 : 1}">

        <android.support.v7.widget.CardView
            style="@style/Fill"
            app:cardBackgroundColor="@color/white"
            app:useCompatPadding="@{viewModel.preLoaderCompatPadding}">

            <LinearLayout
                style="@style/Fill"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    style="@style/Wrapped"
                    android:src="@drawable/ic_logo_splash"
                    android:visibility="@{viewModel.preLoaderLogoEnabled}" />

                <ProgressBar
                    style="@style/Wrapped"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <FrameLayout
            android:id="@+id/view_switcher_content"
            style="@style/Fill" />
    </ViewSwitcher>
</layout>
