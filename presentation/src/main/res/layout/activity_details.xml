<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="ua.mycredit.mycredit.ui.profile.profile.details.DetailsActivity" />

        <variable
            name="viewModel"
            type="DetailsActivity" />

    </data>

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/Fill">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            style="@style/Wide"
            android:background="@drawable/bg_gradient_primary">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/AppTheme.PopupOverlay"
                app:layout_scrollFlags="enterAlways"
                app:navigationIcon="?attr/homeAsUpIndicator"
                app:navigationOnClickListener="@{() -> viewModel.onBackPressed()}"
                app:onMenuItemClickListener="@{viewModel::onMenuItemClickListener}"
                app:title="@string/profile_my_details" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                style="@style/Wide"
                android:theme="@style/AppTheme.PopupOverlay"
                android:visibility="@{viewModel.mode.pagesCount &gt; 1}"
                app:layout_scrollFlags="enterAlways"
                app:tabMode="@{viewModel.mode.tabMode}" />

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/detailsViewPager"
            style="@style/Fill"
            app:adapter="@{viewModel.pagerAdapter}"
            app:currentItem="@={viewModel.currentPage}"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
            app:offscreenPageLimit="@{viewModel.mode.pagesCount}"
            app:onPageChangeListener="@{viewModel.onPageChangeListener}" />

    </android.support.design.widget.CoordinatorLayout>

</layout>
