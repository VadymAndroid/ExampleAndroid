<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Wrapped">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Wide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Wide.Indented">
        <item name="android:layout_marginEnd">@dimen/screen_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/screen_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/screen_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/screen_horizontal_margin</item>
    </style>

    <style name="Wide.Indented.VerticalMargin">
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
    </style>

    <style name="Wide.Indented.Edit">
        <item name="android:layout_marginEnd">@dimen/screen_horizontal_margin_edit</item>
        <item name="android:layout_marginLeft">@dimen/screen_horizontal_margin_edit</item>
        <item name="android:layout_marginStart">@dimen/screen_horizontal_margin_edit</item>
        <item name="android:layout_marginRight">@dimen/screen_horizontal_margin_edit</item>
    </style>

    <style name="Tall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Fill">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WeightedVertically">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="WeightedVerticallyWrapped">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="WeightedHorizontally">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="WeightedHorizontallyWrapped">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="Wrapped.RoundLabel" parent="Wrapped">
        <item name="android:paddingTop">@dimen/margin_short</item>
        <item name="android:paddingBottom">@dimen/margin_short</item>
        <item name="android:paddingLeft">@dimen/margin_big</item>
        <item name="android:paddingRight">@dimen/margin_big</item>
        <item name="android:paddingStart">@dimen/margin_big</item>
        <item name="android:paddingEnd">@dimen/margin_big</item>
    </style>

    <style name="Wrapped.StartMargin" parent="Wrapped">
        <item name="android:layout_marginStart">@dimen/margin_huge</item>
        <item name="android:layout_marginLeft">@dimen/margin_huge</item>
    </style>

    <style name="Wrapped.EndMargin" parent="Wrapped">
        <item name="android:layout_marginEnd">@dimen/margin_huge</item>
        <item name="android:layout_marginRight">@dimen/margin_huge</item>
    </style>


</resources>