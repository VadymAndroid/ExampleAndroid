<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item>

        <shape>

            <stroke
                android:width="@dimen/bg_button_picker_stroke_width"
                android:color="@color/picker_color" />
        </shape>
    </item>

    <item
        android:left="@dimen/bg_button_picker_angle_size"
        android:right="@dimen/bg_button_picker_angle_size">

        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/bg_button_picker_angle_size"
        android:top="@dimen/bg_button_picker_angle_size">

        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>
